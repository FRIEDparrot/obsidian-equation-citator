{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true, 
    "jsx": "react",
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true, 
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}
